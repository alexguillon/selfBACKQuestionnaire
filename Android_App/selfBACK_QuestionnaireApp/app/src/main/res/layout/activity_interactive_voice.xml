<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@mipmap/selfback"
    android:layout_marginTop="10sp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_weight="3"/>
    <LinearLayout
        android:id="@+id/responseBot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="3">
        <TextView
            android:id="@+id/responseBotLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#197ea9"
            android:text="Response from the bot :"
            android:textSize="19sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/responseTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="19sp"
            android:textStyle="bold"
             />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/stateTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/begin"
            android:textSize="18sp"
            android:textColor="#001938"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_weight="5"/>

        <include
            android:id="@+id/voiceInterface"
            layout="@layout/voice_component"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>


